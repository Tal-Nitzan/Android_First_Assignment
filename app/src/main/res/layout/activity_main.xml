<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/background_clouds">

    <ProgressBar
        android:id="@+id/main_PRGBAR_nextDraw"
        android:layout_width="250dp"
        android:layout_height="10dp"
        android:layout_alignParentTop="true"
        style="?android:attr/progressBarStyleHorizontal"
        android:scaleY="1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:max="26"
        android:progressDrawable="@drawable/custom_progress"/>

    <ImageButton
        android:id="@+id/BTN_nextDraw"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:background="@drawable/play_button"/>

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/LBL_leftScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/text_color"
            android:textSize="60sp"/>

        <ImageView

            android:id="@+id/IMG_player1"
            android:layout_marginTop="10dp"
            android:layout_width="60dp"
            android:layout_height="60dp"/>
<!--            android:src="@drawable/player_1"/>-->

        <TextView
            android:id="@+id/LBL_leftPlayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/text_color"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="40dp"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/LBL_rightScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/text_color"
            android:textSize="60sp"/>

        <ImageView
            android:id="@+id/IMG_player2"
            android:layout_marginTop="10dp"
            android:layout_width="60dp"
            android:layout_height="60dp"/>
<!--            android:src="@drawable/player_2"/>-->


        <TextView
            android:id="@+id/LBL_rightPlayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="casual"
            android:textColor="@color/text_color"/>
    </LinearLayout>


    <TextView
        android:id="@+id/LBL_winner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="60sp"
        android:text=""
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="110dp"
        android:layout_centerHorizontal="true">


        <ImageView
            android:id="@+id/IMG_leftCard"
            android:layout_width="180dp"
            android:src="@drawable/card_back"
            android:layout_height="220dp" />
        <ImageView
            android:id="@+id/IMG_rightCard"
            android:layout_width="180dp"
            android:src="@drawable/card_back"
            android:layout_height="220dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/LBL_cardsRemaining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:textSize="20sp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"/>

</RelativeLayout>