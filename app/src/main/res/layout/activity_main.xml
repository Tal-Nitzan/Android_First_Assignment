<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/bg_poker_table">

    <ImageButton
        android:id="@+id/BTN_nextDraw"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/play_button"/>

    <TextView
        android:id="@+id/LBL_leftScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text=""
        android:textSize="60sp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:layout_alignParentStart="true"/>


    <TextView
        android:id="@+id/LBL_rightScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="60sp"
        android:text=""
        android:layout_marginEnd="40dp"
        android:layout_marginTop="40dp"
        android:layout_alignParentEnd="true"/>


    <TextView
        android:id="@+id/LBL_winner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="60sp"
        android:text=""
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="110dp"
        android:layout_centerHorizontal="true">


        <ImageView
            android:id="@+id/IMG_leftCard"
            android:layout_width="180dp"
            android:layout_height="220dp" />
        <ImageView
            android:id="@+id/IMG_rightCard"
            android:layout_width="180dp"
            android:layout_height="220dp" />
    </LinearLayout>

</RelativeLayout>