<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WinnerActivity"
    android:background="@drawable/background_clouds">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/winner_BTN_newGame"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="#00000000"/>

            <TextView
                android:id="@+id/winner_LBL_newGame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/new_game"
                android:textStyle="bold"
                android:textSize="20sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginLeft="200dp">

            <ImageButton
                android:id="@+id/winner_BTN_records"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="#00000000"/>

            <TextView
                android:id="@+id/winner_LBL_records"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/records"
                android:textStyle="bold"
                android:textSize="20sp"/>

        </LinearLayout>
    </LinearLayout>


    <TextView
        android:id="@+id/LBL_winner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textStyle="bold"
        android:textSize="50sp"/>

</RelativeLayout>